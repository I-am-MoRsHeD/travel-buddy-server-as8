model User {
    id               String           @id @default(uuid())
    fullName         String
    email            String           @unique
    password         String
    profilePhoto     String?
    role             UserRole         @default(USER)
    bio              String?
    travelInterests  TravelInterest[] @default([])
    visitedCountries Country[]        @default([])
    currentLocation  String?
    createdAt        DateTime         @default(now())
    updatedAt        DateTime         @updatedAt
}
